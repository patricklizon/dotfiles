[include]
  path = ~/.gitconfig.local

[core]
  excludesfile = ~/.gitignore

[commit]
    gpgsign = true

[color]
    ui = true

[diff]
    compactionHeuristic = true
    noprefix = true

[gpg]
    format = ssh

[init]
    defaultBranch = master

[user]
    name = Patrick Lizo≈Ñ
    useConfigOnly = true

[safe]
    directory = *

[pull]
    rebase = true

[rebase]
    autostash = true
